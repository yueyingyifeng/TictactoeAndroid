<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/winMenu_iv_returnToHome"
            android:layout_toLeftOf="@id/winMenu_tv_whoWin"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@mipmap/return_to_home"
            android:clickable="true"/>

        <TextView
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_centerInParent="true"
            android:id="@+id/winMenu_tv_whoWin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="获胜"
            android:textSize="30dp"
            android:clickable="true"
            android:textColor="#000"/>

        <ImageView
            android:id="@+id/winMenu_iv_restart"
            android:layout_toRightOf="@id/winMenu_tv_whoWin"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@mipmap/restart"
            android:clickable="true"/>

    </RelativeLayout>
</LinearLayout>