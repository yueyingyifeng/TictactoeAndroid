<resources>

    <style name="Widget.Theme.Tictactoe.ActionBar.Fullscreen" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

    <style name="Widget.Theme.Tictactoe.ButtonBar.Fullscreen" parent="">
        <item name="android:background">@color/black_overlay</item>
        <item name="android:buttonBarStyle">?android:attr/buttonBarStyle</item>
    </style>

    <style name="chessPosition">
        <item name="android:layout_height">110dp</item>
        <item name="android:layout_width">110dp</item>
        <item name="android:clickable">true</item>
        <item name="android:background">@drawable/border</item>
    </style>
</resources>